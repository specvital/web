# Server Configuration
PORT=8000
ENV=development

# Allowed Origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173

# Frontend URL (for OAuth callback redirect)
FRONTEND_URL=http://localhost:5173

# PostgreSQL Database
DATABASE_URL=postgres://user:password@localhost:5432/specvital?sslmode=disable

# JWT Authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-min-32-characters

# Token Encryption (AES-256-GCM)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-base64-encoded

# GitHub OAuth App
# Create at: https://github.com/settings/developers
GITHUB_OAUTH_CLIENT_ID=your-github-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-client-secret
GITHUB_OAUTH_REDIRECT_URL=http://localhost:8000/api/auth/callback

# Cookie Security
# Set to 'true' in production (requires HTTPS)
SECURE_COOKIE=false

# GitHub App (for organization repository access)
# Create at: https://github.com/settings/apps
GITHUB_APP_ID=your-github-app-id
# Generate private key from GitHub App settings, convert to single line:
# awk 'NF {sub(/\r/, ""); printf "%s\\n",$0;}' your-app.private-key.pem
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
GITHUB_APP_WEBHOOK_SECRET=your-webhook-secret

# Webhook Proxy (development only)
# Create channel at: https://smee.io/new
SMEE_URL=https://smee.io/your-channel-id
